# OpenAI API Key - Required for transcription and AI analysis
OPENAI_KEY=your_openai_api_key_here

# Playbook System Configuration
# Set to 'true' to enable the knowledge base system
PLAYBOOK_ENABLED=true

# Default path for storing playbook files (optional)
PLAYBOOK_PATH=./playbooks

# Maximum file size for uploads (default: 10MB)
PLAYBOOK_MAX_SIZE=10MB

# Allowed file types (comma-separated, no spaces)
PLAYBOOK_TYPES=pdf,docx,txt

# Example with playbook disabled:
# PLAYBOOK_ENABLED=false

# Example with custom settings:
# PLAYBOOK_ENABLED=true
# PLAYBOOK_MAX_SIZE=20MB
# PLAYBOOK_TYPES=pdf,txt
